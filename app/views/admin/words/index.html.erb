<br>
<div class="row">
  <div class="col-md-8">
    <div class="row">
      <h3 class="text-info">
        <%= t("import_using_fileType_file", fileType: Settings.fileType_to_import_words) %>
      </h3>
      <%= form_tag admin_imports_path, method: :post, multipart: true do %>
        <div class="col-md-11">
          <%= file_field_tag :file, class: "filestyle", required: true %>
        </div>
        <div class="col-md-1">
          <%= submit_tag t("done"), class: "btn btn-default pull-right" %>
        </div>
      <% end %>
    </div>
    <hr>
    <table id="word_list_table" class="table table-hover table-bordered text-center">
      <tbody>
        <tr>
          <th class="text-center"><%= t("category").capitalize %></th>
          <th class="text-center"><%= t("word").capitalize %></th>
          <th class="text-center"><%= t("mean").capitalize %></th>
          <th class="text-center"><%= t("tool").capitalize %></th>
        </tr>
        <% @words.each do |each_word| %>
          <%= render "admin/words/word", each_word: each_word %>
        <% end %>
      </tbody>
    </table>
    <a href="<%= admin_words_path(format: "csv") %>" class="pull-right btn btn-primary">
      <span class="glyphicon glyphicon-download-alt"></span><%= t("download").capitalize %>
    </a>
  </div>
  <div class="col-md-4">
    <div>
      <%= form_for [:admin, @word], class: "form" do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <div class="form-group">
          <%= f.label :word %>
          <%= f.text_field :word, class: "form-control", placeholder: t("enter_new_word") %>
        </div>
        <div class="form-group">
          <%= f.label :category_id %>
          <%= f.select :category_id, options_for_select(@categories.map{ |c| [c.name, c.id ] }, selected_key = f.object.category_id), {}, class: "form-control" %>
        </div>
        <div class="form-group" id="means">
          <div id="answer_list">
            <%= f.fields_for :answers, :wrapper => true do |answer_form| %>
              <%= render "shared/error_messages", object: answer_form.object %>
              <div class="row answer-form">
                <div class="col-md-5">
                  <%= answer_form.label :mean %>
                  <%= answer_form.text_field :mean, class: "form-control" %>
                </div>
                <div class="col-md-3">
                  <%= answer_form.label :is_correct %>
                  <%= answer_form.check_box :is_correct, class: "checkbox" %>
                </div>
                <div class="col-md-2">
                  <%= answer_form.label :_destroy, t("ignore").capitalize %>
                  <%= answer_form.check_box :_destroy %>
                </div>
                <div class="col-md-2">
                  <a onclick="remove_answer_form(this)"><%= t("remove").capitalize %></a>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <br>
        <a onclick="add_answer_form(this)" class="btn btn-success"><%= t("add").capitalize %></a>
        <%= f.submit t("done"), class: "btn btn-primary pull-right" %>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript" src="remove_answer_form.js">
</script>