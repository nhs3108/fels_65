<% provide :title, t("lesson") %>
<h1 align="center"><%= t "lesson" %></h1>
<h3 align="center"><%= @category.name %></h3>
<h3 class="text-center"><%= @mark %></h3>
<h3 class="pull-right text-danger">
  <span id="hidden-data" data-time-over-msg="<%= t 'time_over' %>"
    data-time-remaining="<%= @time_remaining %>">
  </span>
  <span class="glyphicon glyphicon-time">&nbsp</span>
  <b id="time-remaining"></b>
</h3>
<div class="container">
  <div class="row" id="lesson">
    <%= form_for [@category, @lesson] do |f| %>
      <%= f.fields_for :results do |builder| %>
        <div class="col-md-10">
          <%= render "question", f: builder %>
        </div>
      <% end %>
      <div class="col-md-4 col-md-offset-4">
        <br>
        <%= f.submit t("done"), class: "btn btn-primary" if @is_owner %>
      </div>
    <% end %>
  </div>
</div>

<%= javascript_include_tag "lesson_timer", "data-turbolinks-track": true %>
